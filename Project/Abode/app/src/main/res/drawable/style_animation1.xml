<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:padding="10dp">

            <solid android:color="#FF4545"/>

            <stroke
                android:width="2dp"
                android:color="#DDA0DD" />

            <padding android:left="15dp" android:right="10dp" android:top="10dp" android:bottom="10dp"/>

            <corners android:radius="25dp"/>

        </shape>
    </item>
     <!-- عند الوقوف على الزر-->
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:padding="10dp">

            <solid android:color="#FFDAB9"/>

            <stroke
                android:width="2dp"
                android:color="#DDA0DD" />

            <padding android:left="15dp" android:right="10dp" android:top="10dp" android:bottom="10dp"/>

            <corners android:radius="25dp"/>

        </shape>
    </item>

    <!-- الحالة الحالية للزر "حالة الظهور"-->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" android:padding="10dp"
            >

            <solid android:color="#FF66"/>

            <stroke
                android:width="2dp"
                android:color="#DDA0DD" />

            <padding android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp"/>

            <corners
                android:radius="25dp"/>

        </shape>
    </item>

</selector>